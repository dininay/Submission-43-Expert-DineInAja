{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "no-console": 0,
    "no-alert": 0,
    "no-underscore-dangle": 0,
    "no-restricted-globals": 0,
    "linebreak-style": 0,
    "max-len": ["error", 200],
    "no-shadow": "off",
    "class-methods-use-this": "off",
    "no-extra-semi": 0,
    "no-tabs": ["error", { "allowIndentationTabs": true }],
    "no-unused-vars": "off",
    "no-mixed-spaces-and-tabs": 0,
    "no-new": 0,
    "quotes": 0,
    "no-undef": 0,
    "indent": 0,
    "eol-last": 0,
    "object-curly-newline": 0,
    "no-trailing-spaces": 0,
    "comma-dangle": 0
  }
}
